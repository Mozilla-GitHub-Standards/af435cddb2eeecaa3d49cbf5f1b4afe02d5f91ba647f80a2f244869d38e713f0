{
	"variables": [
	{ "key": "root", "value": "<<t>>" }
	],

	"tests": [
	{
		"name": "simplecontent0",
		"aliases": [ "no such file test" ],
		"identifier": "test0",
		"expectedresult": false,
		"filecontent": {
			"path": "${root}",
			"file": "nosuchfile",
			"expression": ".*"
		}
	},

	{
		"name": "simplecontent1",
		"identifier": "test1",
		"expectedresult": true,
		"filecontent": {
			"path": "${root}",
			"file": "testfile0",
			"expression": ".*(Test).*"
		}
	},

	{
		"name": "simplecontent2",
		"identifier": "test2",
		"expectedresult": true,
		"filecontent": {
			"path": "${root}",
			"file": "testfile0",
			"expression": "(.*)"
		},
		"regexp": {
			"value": "Test"
		}
	},

	{
		"name": "simplecontent3",
		"identifier": "test3",
		"expectedresult": true,
		"filecontent": {
			"path": "${root}",
			"file": "testfile0",
			"expression": "^(T\\S+).*"
		},
		"regexp": {
			"value": "Test"
		}
	},

	{
		"name": "filecontent0",
		"identifier": "test4",
		"expectedresult": true,
		"filecontent": {
			"path": "${root}",
			"file": ".*file1",
			"expression": "^Version = (\\S+)"
		},
		"evr": {
			"operation": "<",
			"value": "0.6"
		}
	},

	{
		"name": "filecontent1",
		"identifier": "test5",
		"expectedresult": false,
		"filecontent": {
			"path": "${root}",
			"file": ".*file1",
			"expression": "^Version = (\\S+)"
		},
		"evr": {
			"operation": "<",
			"value": "0.6"
		},
		"if": [ "no such file test" ]
	},

	{
		"name": "filecontent2",
		"identifier": "test6",
		"expectedresult": true,
		"filecontent": {
			"path": "${root}",
			"file": ".*file1",
			"expression": "^Version = (\\S+)"
		},
		"evr": {
			"operation": "<",
			"value": "0.6"
		},
		"if": [ "simplecontent1" ]
	},

	{
		"name": "filecontent3",
		"aliases": [ "version is ok" ],
		"identifier": "test5",
		"expectedresult": false,
		"filecontent": {
			"path": "${root}",
			"file": ".*file1",
			"expression": "^Version = (\\S+)"
		},
		"evr": {
			"operation": "<",
			"value": "0.4z"
		}
	}
		
	]
}
